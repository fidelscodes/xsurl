<div class="row col-lg-6 col-lg-offset-3 col-sm-12">
  <form class="form-horizontal" action="/signup" method="post">
    <fieldset>
      <legend>New User Sign Up</legend>
      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="username" id="username" placeholder="Username" autofocus required minlength="4" max="20">
        </div>
      </div>
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" name="email" id="email" placeholder="Email" required>
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" name="password" id="password" placeholder="Password" required minlength="4" maxlength="20">
        </div>
      </div>
      <div class="form-group">
       <div class="col-sm-10 col-sm-offset-2">
         <a href="/"><button type="button" class="btn btn-default">Cancel</button></a>
         <button type="submit" class="btn btn-primary">Submit</button>
       </div>
     </div>
    </fieldset>
  </form>
</div>
