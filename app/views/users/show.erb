<h1><%= @user.username %>'s Links</h1>
<form class="form-horizontal" action="/links/new" method="post">
  <fieldset>
    <legend>Create a new link</legend>
    <div class="form-group">
      <!-- <label for="new_link" class="col-sm-2 control-label"></label> -->
      <div class="col-sm-10 col-sm-offset-1">
        <input type="text" class="form-control" name= "new_link" id="new_link" placeholder="Enter URL to shrink" autofocus>
      </div>
    </div>
    <div class="form-group">
     <div class="col-sm-10 col-sm-offset-1">
       <button type="reset" class="btn btn-default">Clear</button>
       <button type="submit" class="btn btn-primary">Create</button>
     </div>
   </div>
  </fieldset>

  <!-- Display Created Links -->

</form>
